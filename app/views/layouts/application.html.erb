<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "statuses", :media => "all" %>

  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "application.js" %>
  <%= javascript_include_tag "jquery", "jquery" %>
  <%= javascript_include_tag "jquery", "jquery_ujs" %>
  <%= javascript_include_tag "jquery", "jquery-ui" %>
  
  <%= javascript_include_tag "jquery", "js-routes" %>
  <%= javascript_include_tag "statuses.js.coffee" %>
  <%= javascript_include_tag "user_friendships.js" %>
  <%= csrf_meta_tags %>

</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a href="#" class="brand"> Treebook</a>
				<ul class="nav">
					<li><%= link_to "All Statuses", feed_path %></li>
				</ul>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
						<li> <%= link_to 'Friends', user_friendships_path %></li>
						<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
						<li><%= link_to "Log Out", logout_path %></li>
					<% else %>
						<li><%= link_to "Register", register_path %></li>
						<li><%= link_to "Log in", login_path %></li>
					<% end %>

				</ul>
			</div>
		</div>
	</div>
	<div class="container">
		
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class(type.to_s) %>">
               <button class="close" data-dismiss="alert">x</button>
               <%= message %>
           </div>
		<% end %>
        
               

		<%= yield %>
	</div>
</body>
</html>
